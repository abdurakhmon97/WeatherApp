<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/one_weather_report">

    <ImageView
        android:id="@+id/iv_weather_condition_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_weather_info"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_weather_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:lines="2"
        android:hint="Weather Info is shown here"
        app:layout_constraintStart_toEndOf="@+id/iv_weather_condition_picture"
        app:layout_constraintTop_toTopOf="@+id/iv_weather_condition_picture" />
</androidx.constraintlayout.widget.ConstraintLayout>